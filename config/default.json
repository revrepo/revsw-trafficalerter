{
    "mongodb_url": "mongodb://TESTSJC20-CMDB01.REVSW.NET:27017/trafficalerts?replicaSet=CMDB-rs0",
    "ElasticSearch": {
        "ESHost": "testsjc20-es01.revsw.net",
        "ESPort": "9200"
    },
    "service": {
        "host": "127.0.0.1",
        "port": 7000,
        "https_port": 8000
    },
    "log_dir": "/logs/",
    "rules_dir": "/alertRules/",
    "rule_template": [
        "es_host: {{ESHOST}}",
        "es_port: {{ESPORT}}",
        "name: {{ACCOUNTID}}_{{DOMAINID}}_{{TIMESTAMP}}",
        "type: {{TYPE}}",
        "index: logstash-*",
        "num_events: {{EVENTS}}",
        "timeframe:",
        "    hours: {{TIMEFRAME_HOURS}}",
        "filter:",
        "- term:",
        "    domain: {{DOMAIN_NAME}}",
        "alert:",
        "  - command",
        "command: [\"node ./../revui/revsw-trafficalerter/lib/createAlert.js\", \"--configId\", \"%({{CONFIGID}})s\"]"
    ]
}